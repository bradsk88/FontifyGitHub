{
  "name": "Fontify GitHub",
  "short_name": "Fontify",
  "version": "0.0.1",
  "description": "Apply a font to specific GitHub users",
  "icons": {
    "24": "icons/icon24.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "manifest_version": 2,
  "permissions": ["storage", "tabs"],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "web_accessible_resources": [
        "generated/Fontify.js",
        "dist/style.css"
      ],
      "js": [
        "generated/Fontify.js"
      ],
      "css": [
        "generated/Fontify.css"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
